{{!-- body --}}
<div class="container newsList">
    <div class="row">
        {{#each news}}
        <div class="card col-lg-4 col-12 m-auto" style="width: 18rem;">
  <img src="{{this.img}}" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title" href="{{this.link}}" target="_blank">{{this.title}}</h5>
    
    <a href="{{this.link}}" target="_blank" class="btn btn-primary">View Article</a>
    <button class="saveBtn btn btn-success" data-ObjectId="{{this._id}}" data-Title="{{this.title}}"
                data-State="{{this.saved}}">Save
            
            </button>
  </div>
</div>
        {{/each}}
    </div>
</div>
